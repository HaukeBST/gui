{% if breadcrumbs|length > 0 %}
    {% set breadcrumbsList = breadcrumbs | reduce((accumulator, breadcrumb) => (
        accumulator | merge([{
            'label': breadcrumb.label | trans,
            'uri': breadcrumb.uri,
        }])
    ), []) %}
    <spryker-breadcrumbs breadcrumbs="{{ breadcrumbsList | json_encode() }}" />
{% endif %}
